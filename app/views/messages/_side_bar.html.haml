.side-bar
  .user-name
    .top-items
      .name
        = current_user.name
      %ul.iconlist
        %li.icon
          = link_to new_group_path(@group) do
            = icon('far', 'edit')
        %li.icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group-name
            = group.name
          .group-message
            = group.show_last_message
  